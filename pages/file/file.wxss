/* pages/tv/tv.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}



.header {
  position: fixed;
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  z-index: 99;
  display:flex; 
  flex-direction: row;
  justify-content: center;
}

.box {
  display:flex; 
  flex-direction: row;
  justify-content: center;
  align-items: center; 
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 35px;
  width: 700rpx;
}

.box image{
  margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}
.box text{
  font-size: 24rpx;
  color: #868181;
}

.sub-container {
  margin-top: 100rpx;
  width: 100%;
}

.line {
  border: 1px solid #ccc;
  opacity: 0.3;
}

.add_img{
   position: fixed;
   width:42px;
  height:42px;
        bottom: 30px;
        right: 20px;
}
